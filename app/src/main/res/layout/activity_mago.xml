<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ThemeColor"
    tools:context="com.monster.fancy.debug.mago.MagoActivity">

    <TextView
        android:id="@+id/nextRoadNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="同砚路"
        android:layout_alignTop="@+id/roadsignimg"
        android:textSize="40sp"
        android:textColor="@color/ivory"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/roadsignimg"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/mago" />

    <TextView
        android:id="@+id/nextRoadDistanceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10米"
        android:layout_alignBottom="@+id/roadsignimg"
        android:textSize="40sp"
        android:textColor="@color/ivory"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundGray"
        android:layout_alignParentBottom="true">

        <ImageView
            android:onClick="back"
            android:src="@drawable/back_icon"
            android:layout_width="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/restDistanceText"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/ivory"
            android:layout_margin="20dp"
            android:text="0.8km" />
    </RelativeLayout>

</RelativeLayout>
