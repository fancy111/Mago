<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.monster.fancy.debug.mago.MainActivity">

    <!-- The main content view -->
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ThemeColor">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.amap.api.maps.MapView
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tom Call Jerry"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:onClick="TomCallJerry" />
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:background="#D999">

                <TextView
                    android:id="@+id/tv_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </ScrollView>
        </RelativeLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start|left"
        android:background="@color/ivory"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/basicColor"
            android:orientation="vertical"
            android:padding="20dp">

            <com.monster.fancy.debug.view.RoundImageView
                android:id="@+id/mainAvatar_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:maxHeight="130dp"
                android:src="@drawable/photo" />

            <TextView
                style="@style/textViewToolBarStyle"
                android:id="@+id/mainUsername_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="fanfanfansiyu" />

            <TextView
                android:id="@+id/mainPhoneNum_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="level:1"
                android:textColor="@color/ivory" />
        </LinearLayout>

        <TextView
            android:id="@+id/myfriend_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/myfriend_icon"
            android:drawablePadding="20dp"
            android:onClick="pageJump"
            android:paddingRight="10dp"
            android:text="@string/myFriend"
            android:textColor="#8a8a8a"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/setting_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/setting_icon"
            android:drawablePadding="20dp"
            android:onClick="pageJump"
            android:paddingRight="10dp"
            android:text="@string/setting"
            android:textColor="#8a8a8a"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/help_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/help_icon"
            android:drawablePadding="20dp"
            android:onClick="pageJump"
            android:paddingRight="10dp"
            android:text="@string/help"
            android:textColor="#8a8a8a"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/callrecord_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/callrecord_icon"
            android:drawablePadding="20dp"
            android:onClick="pageJump"
            android:paddingRight="10dp"
            android:text="@string/callRecord"
            android:textColor="#8a8a8a"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/logout_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="36dp"
            android:drawableLeft="@drawable/logout_icon"
            android:drawablePadding="10dp"
            android:onClick="pageJump"
            android:paddingRight="10dp"
            android:text="@string/logout"
            android:textSize="16sp" />
    </LinearLayout>


</android.support.v4.widget.DrawerLayout>
