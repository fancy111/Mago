<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/basicColor</item>
        <item name="colorPrimaryDark">@color/basicColorDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="BtnStyle">
        <item name="android:background">@drawable/common_btn_selector</item>
        <item name="android:textColor">@color/ivory</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="DeleteBtnStyle">
        <item name="android:background">@drawable/delete_btn_selector</item>
        <item name="android:textColor">@color/ivory</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="edtTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/common_edittext</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">14dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="textViewToolBarStyle" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/ivory</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="textViewStyle_profile" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textColor_gray</item>
        <item name="android:layout_margin">12dp</item>
    </style>

    <style name="imageBtnStyle" parent="@android:style/Widget.ImageButton">
        <item name="android:background">#0000</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
